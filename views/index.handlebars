<div class="form">
      
      <ul class="tab-group">
        <li class="tab active"><a href="#signup">Farmers</a></li>
        <li class="tab"><a href="#login">Customers</a></li>
      </ul>
      
      <div class="tab-content">
        <div id="signup"> 
        <h1>Welcome Farmers!</h1>  
         
          
          <form method="post" action="/farmer/login" >
          
          
        
            <div class="field-wrap">
              
              
          </div>

          <div class="field-wrap">
            <label>
              Farmer Name<span class="req">*</span>
            </label>
            <input type="text" name="username" required autocomplete="off"/>
          </div>
          
          <div class="field-wrap">
            <label>
              Password<span class="req">*</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>
          
           <p><a href="/farmer/register">Create User</a></p>
          
          <button class="button button-block"/>Sign in</button>
          
          
          </form>

        </div>
        
        <div id="login">   
          <h1>Welcome Customers!</h1>
          
          <form action="/customer/login" method="post">
          
            <div class="field-wrap">
            <label>
              Name<span class="req">*</span>
            </label>
            <input type="text" name="username" required autocomplete="off"/>
          </div>
          
          <div class="field-wrap">
            <label>
              Password<span class="req">*</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>

          
          <p><a href="/customer/register">Create User</a></p>

          
          <button class="button button-block"/>Sign in</button>
          
          </form>

        </div>
        
      </div>
      
</div>